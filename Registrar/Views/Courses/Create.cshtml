@{
  Layout = "_Layout";
}

@model Registrar.Models.Course
<div class="AddCourse">
  <h4>Add a new course</h4>
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name, "Course Name: ")
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.CourseNumber, "Course Number: ")
    @Html.TextBoxFor(model => model.CourseNumber)
    <br>
    <input type="submit" value="Add new course" />
  }
</div>
<p>@Html.ActionLink("Show all courses", "Index")</p>