@{
  Layout = "_Layout";
}

@model Registrar.Models.Student
<div>
<h4>Add a new task</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)<br>
  @Html.TextBoxFor(model => model.Name) <br>

  @Html.LabelFor(model => model.Date) <br>
  @Html.TextBoxFor(model => model.Date) <br>

  @Html.Label("Select course") <br>
  @Html.DropDownList("CourseId") <br> <br>
  

  <input type="submit" value="Add new student" class="btn btn-primary" />
}

</div>
<p>@Html.ActionLink("Show all students", "Index")</p>